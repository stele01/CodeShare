# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/codeshare

# JWT Configuration
# IMPORTANT: Generate a strong, unique secret key for production!
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_secret_key_here_make_it_at_least_64_characters_long
JWT_EXPIRATION=7d

# CORS Configuration (for production)
# Replace with your actual frontend domain
FRONTEND_URL=https://yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security Configuration
REQUEST_BODY_LIMIT=10mb 